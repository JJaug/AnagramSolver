@{
    Layout = "_Layout";
}
@Model


<table border="1" cellpadding="2" cellspacing="2">
    <tr>
        <th>Word</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td><a>@Html.ActionLink($"{@item.Word}", "Details", new { @id = @item.Word })</a></td>
        </tr>
    }
</table>



@if (ViewBag.pageNumber - 2 > 0)
{
    <a>@Html.ActionLink($"Page{ViewBag.pageNumber - 2}", $"Index", new { @id = ViewBag.pageNumber - 2 })</a>
}
@if (ViewBag.pageNumber - 2 >= 0 )
{
    <a>@Html.ActionLink($"Previous Page", $"Index", new { @id = ViewBag.pageNumber - 1})</a>
}

<a>@Html.ActionLink($"Current Page", $"Index", new { @id = ViewBag.pageNumber })</a>
<a>@Html.ActionLink($"Next Page", $"Index", new { @id = ViewBag.pageNumber + 1 })</a>
<a>@Html.ActionLink($"Page{ViewBag.pageNumber + 2}", $"Index", new { @id = ViewBag.pageNumber + 2 })</a>

